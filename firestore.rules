rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function createsOwnUid() {
      return isSignedIn() && request.resource.data.uid == request.auth.uid;
    }

    function ownsUid() {
      return isSignedIn() && resource.data.uid == request.auth.uid;
    }

    // User profile and leaderboard
    match /users/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    match /leaderboard/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    match /leaderboardSeed/{docId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // User-owned activity collections
    match /quizResults/{docId} {
      allow create: if createsOwnUid();
      allow read, update, delete: if ownsUid();
    }

    match /simulatorLogs/{docId} {
      allow create: if createsOwnUid();
      allow read, update, delete: if ownsUid();
    }

    match /activity_logs/{docId} {
      allow create: if createsOwnUid();
      allow read, update, delete: if ownsUid();
    }

    match /feedback/{docId} {
      allow create: if createsOwnUid();
      allow read, update, delete: if ownsUid();
    }

    match /gallery/{itemId} {
      allow read: if true;
      allow create: if createsOwnUid();
      allow update, delete: if ownsUid();
    }

    // Training/config content (hackathon-friendly write policy)
    match /quizzes/{quizId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /quizQuestions/{docId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /simScenarios/{docId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /classes/{classId} {
      allow read, write: if isSignedIn();
    }

    // Legacy logs collection
    match /logs/{logId} {
      allow read: if false;
      allow write: if isSignedIn();
    }
  }
}
